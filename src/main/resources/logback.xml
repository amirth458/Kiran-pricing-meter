<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Send debug messages to System.out -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <!-- By default, encoders are assigned the type ch.qos.logback.classic.encoder.PatternLayoutEncoder -->
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{5} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${CATALINA_HOME}/logs/application-web.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${CATALINA_HOME}/logs/application-web.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>10MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
            <!-- keep N days' worth of history -->
            <maxHistory>15</maxHistory>
            <totalSizeCap>2GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <charset>UTF-8</charset>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %thread %level %logger %line %msg %n</pattern>
        </encoder>
    </appender>

    <appender name="cloud-watch" class="io.github.dibog.AwsLogAppender">
        <awsConfig>
            <credentials>
                <accessKeyId>AKIAXDHQUQPKFHB64HM4</accessKeyId>
                <secretAccessKey>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</secretAccessKey>
            </credentials>
            <region>us-west-2</region>
            <!--<clientConfig class="com.amazonaws.ClientConfiguration">
                <proxyHost></proxyHost>
                <proxyPort></proxyPort>
            </clientConfig>-->
        </awsConfig>
        <createLogGroup>true</createLogGroup>
        <queueLength>100</queueLength>
        <groupName>diligent-admin-website-${SPRING_PROFILES_ACTIVE}</groupName>
        <streamName>admin-website</streamName>
        <dateFormat>yyyyMMdd_HH</dateFormat>
        <!--<dateFormat>yyyyMMdd_HHmm</dateFormat>-->
        <layout>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{35} %line - %msg %n</pattern>
        </layout>
    </appender>

    <logger name="com.diligent" level="DEBUG" additivity="false">
        <appender-ref ref="cloud-watch"/>
        <appender-ref ref="FILE"/>
        <appender-ref ref="STDOUT"/>
    </logger>

    <logger name="com.amazonaws" level="ERROR" additivity="false">
        <appender-ref ref="cloud-watch"/>
        <appender-ref ref="FILE"/>
        <appender-ref ref="STDOUT"/>
    </logger>

    <logger name="org.springframework" level="WARN" additivity="false">
        <appender-ref ref="cloud-watch"/>
        <appender-ref ref="FILE"/>
        <appender-ref ref="STDOUT"/>
    </logger>

    <logger name="springfox.documentation" level="ERROR" additivity="false">
        <appender-ref ref="cloud-watch"/>
        <appender-ref ref="FILE"/>
        <appender-ref ref="STDOUT"/>
    </logger>

    <logger name="org.apache" level="ERROR" additivity="false">
        <appender-ref ref="cloud-watch"/>
        <appender-ref ref="FILE"/>
        <appender-ref ref="STDOUT"/>
    </logger>

    <logger name="com.ulisesbocchio" level="ERROR" additivity="false">
        <appender-ref ref="cloud-watch"/>
        <appender-ref ref="FILE"/>
        <appender-ref ref="STDOUT"/>
    </logger>

    <logger name="org.hibernate" level="ERROR" additivity="false">
        <appender-ref ref="cloud-watch"/>
        <appender-ref ref="FILE"/>
        <appender-ref ref="STDOUT"/>
    </logger>

    <logger name="com.zaxxer" level="ERROR" additivity="false">
        <appender-ref ref="cloud-watch"/>
        <appender-ref ref="FILE"/>
        <appender-ref ref="STDOUT"/>
    </logger>

    <!-- By default, the level of the root level is set to DEBUG -->
    <root level="DEBUG">
        <appender-ref ref="cloud-watch"/>
        <appender-ref ref="FILE"/>
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>